.player {
    width: 100vw; height: 100vh;
    text-align: center;
    overflow: hidden;
}
.player>image {
    width: 100vw; height: 100vh;
    position: absolute;
    top: 0; left: 0; z-index: -1;
    filter: blur(4vw) sepia(.3) saturate(.8);
}

.song-info {
    height: 15vh;
    border-bottom: 0px solid red;
}
.song-info view {
    padding: 20px 0 10px;
}
.song-info view:last-child {
    padding: 0;
    color: #666; font-size: 10pt;
}

.song-player {
    height: 60vh;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border: 0px solid green;
}
.song-player image {
    width: 70vw; height: 70vw;
    border-radius: 50%;
}
.song-player.playing image {
    animation: playing 10s linear infinite;
    animation-play-state: running;
}
.song-player.pause image {
    animation: playing 10s linear infinite;
    animation-play-state: paused;
}
.song-progress-bar {
    padding: 0 8px;
    height: 10vh;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-top: 0px solid red;
    border-bottom: 0px solid red;
}
.song-progress-bar span {
    font-size: 10pt; color: #888888;
}
.song-progress-bar slider {
    width: 80vw;
}
.song-opt {
    width: 100vw; height: 10vh;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border: 0px solid red;
}
.song-opt image {
    width: 10vw; height: 10vw;
}

@keyframes playing {
    0%   { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
